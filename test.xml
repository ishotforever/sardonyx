<script type="text/javascript">	
<% 
String errormsg = (String)request.getAttribute("errormsg");
if(!StringUtil.isEmpty(errormsg)) {
%>
function showerror() {
	Dialog.alert("<%=errormsg%>");
}
$(document).ready(function() {
	showerror();
});
<%	
}
%>	
function approvalMore(){
	if( checkIDs()&&confirm('所选项将通过审核')){
		document.forms[1].submit();   
	}
}
function checkIDs(){
	var checkValues = document.getElementsByName("checkboxname");
	var temp="";
	for(var i=0;i<checkValues.length;i++){
	   if(checkValues[i].checked){
	      temp+=checkValues[i].value;
	   }
	}
	if(temp.length==0){
	   alert("请选择!"); 
	   return false; 
	}else{
	   return true;
	}
}

function selectall(){ 
	var a = document.getElementsByTagName("input"); 
	for (var i=0; i<a.length; i++) 
	if (a[i].type == "checkbox") a[i].checked =!a[i].checked; 
} 
function jingcaiend(type,day,weekid,teamid){
	if(window.confirm('确定期结')){
		window.location.href = "<%=request.getContextPath()%>/tjingcaiMatches/jingcaiend?type="+type+"&day="+day+"&weekid="+weekid+"&teamid="+teamid;
	}
}
// Y.Lei
function addishot() {
	
	var ids = document.getElementsByName("ids");
	var values = "";
	var value = "";
	var setvalue = "";
	var setparam = "";
	var str = "";
		for(var i= 0;i <ids.length;i++){
			//原本是热点的取消热点
		if(!ids[i].checked){
			 setvalue = ids[i].value ;
			if(setvalue.charAt(setvalue.length-1)==1){
				str= setvalue.split('_');
				setparam = setparam+"setparam="+str + "&";
			}
		}
		//原本不是热点的选为热点
		if(ids[i].checked){
			value= ids[i].value.split('_');
			values = values+"values="+value + "&";
				}
			}
	if(values.length){
		if(window.confirm("确定添加热点赛事吗?")) {
			var	 url = "<%=request.getContextPath()%>/tjingcaiMatches/addishot?" + values+setparam;
					alert("confirm yes "+url);	
				 window.location.href = url;
		}
	}
}

</script>
